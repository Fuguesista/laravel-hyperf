{
    "name": "swooletw/laravel-hyperf",
    "type": "project",
    "keywords": [
        "php",
        "swoole",
        "framework",
        "hyperf",
        "microservice",
        "laravel"
    ],
    "description": "A Laravel styled framework skeleton based on powerful Hyperf framework.",
    "license": "Apache-2.0",
    "require": {
        "php": ">=8.1",
        "friendsofhyperf/model-observer": "~3.1.0",
        "friendsofhyperf/pretty-console": "~3.1.0",
        "friendsofhyperf/tinker": "~3.1.0",
        "hyperf/paginator": "~3.1.0",
        "hyperf/redis": "~3.1.0",
        "hyperf/validation": "~3.1.0",
        "hyperf/view": "~3.1.0",
        "hyperf/view-engine": "~3.1.0",
        "swooletw/hyperf-packages": "@dev"
    },
    "require-dev": {
        "fakerphp/faker": "^2.0",
        "filp/whoops": "^2.15",
        "friendsofphp/php-cs-fixer": "3.35.1",
        "hyperf/devtool": "~3.1.0",
        "hyperf/testing": "~3.1.0",
        "hyperf/watcher": "~3.1.0",
        "phpstan/phpstan": "^1.0"
    },
    "suggest": {
        "ext-openssl": "Required to use HTTPS.",
        "ext-json": "Required to use JSON.",
        "ext-pdo": "Required to use MySQL Client.",
        "ext-pdo_mysql": "Required to use MySQL Client.",
        "ext-redis": "Required to use Redis Client."
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "files": []
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        },
        "files": [
            "tests/helpers.php"
        ]
    },
    "repositories": [
        {
            "type": "path",
            "url": "../framework",
            "options": {
                "symlink": true
            }
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "extra": [],
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-autoload-dump": [
            "rm -rf runtime/container"
        ],
        "test": "co-phpunit --prepend tests/bootstrap.php -c phpunit.xml --colors=always",
        "cs-diff": "php-cs-fixer fix --path-mode=intersection `git diff --name-only --diff-filter=ACMRTUXB origin/master..HEAD`",
        "cs-fix": "php-cs-fixer fix $1",
        "analyse": "phpstan analyse --memory-limit 300M -l 0 -c phpstan.neon ./app ./config",
        "start": [
            "Composer\\Config::disableProcessTimeout",
            "php hyperf start"
        ]
    }
}
